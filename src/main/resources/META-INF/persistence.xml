<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="default" transaction-type="JTA">
        <jta-data-source>jdbc/posResource</jta-data-source>

        <class>com.nextgenpos.demo.entities.Category</class>
        <class>com.nextgenpos.demo.entities.Product</class>
        <class>com.nextgenpos.demo.entities.SaleItem</class>
        <class>com.nextgenpos.demo.entities.Sale</class>
        <class>com.nextgenpos.demo.entities.Returned</class>
        <class>com.nextgenpos.demo.entities.OfferBundle</class>
        <class>com.nextgenpos.demo.entities.OfferItem</class>
        <class>com.nextgenpos.demo.entities.ProductPhoto</class>
        <class>com.nextgenpos.demo.entities.CarouselPhoto</class>
        <class>com.nextgenpos.demo.entities.User</class>
        <class>com.nextgenpos.demo.entities.UserGroup</class>
        <class>com.nextgenpos.demo.entities.Address</class>
        <class>com.nextgenpos.demo.entities.ErrorReport</class>
        <class>com.nextgenpos.demo.entities.Wishlist</class>
        <properties>
            <property name="jakarta.persistence.schema-generation.database.action" value="create-or-extend-tables" />
        </properties>
    </persistence-unit>
</persistence>
