<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

<div class="header_bar container-fluid fixed-bottom bg-light opacity-100">
  <div class="row w-100 d-flex justify-content-between ">
    <div class="col-auto">
      <c:if test="${pageContext.request.isUserInRole('ADMIN')}">
        <a class="btn btn-lg" href="${pageContext.request.contextPath}/Users">
          <svg xmlns="http://www.w3.org/2000/svg" width="38" height="38" fill="deeppink" class="bi bi-people-fill" viewBox="0 0 16 16">
