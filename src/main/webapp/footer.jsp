        </a>
      </c:if>
      <c:if test="${pageContext.request.isUserInRole('GENERAL_DIRECTOR')}">
        <a class="btn btn-lg" href="${pageContext.request.contextPath}/Products">
          <svg xmlns="http://www.w3.org/2000/svg" width="38" height="38" fill="deeppink" class="bi bi-map-fill" viewBox="0 0 16 16">
