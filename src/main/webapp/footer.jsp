        </c:when>
        <c:otherwise>
          <a class="btn btn-lg" href="${pageContext.request.contextPath}/Logout">
            <svg xmlns="http://www.w3.org/2000/svg" width="38" height="38" fill="deeppink" class="bi bi-person-dash" viewBox="0 0 16 16">
